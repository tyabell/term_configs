highlight Normal ctermbg=black
syntax enable
set background=dark
#colorscheme solarized
set ignorecase
set smartcase
set hlsearch
set incsearch
set showmatch
set mat=2
set showcmd
set cursorline
set wildmenu
set laststatus=2
set title
set ruler
set showtabline=2
nmap <C-up> <C-y>
nmap <C-down> <C-e>
filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
